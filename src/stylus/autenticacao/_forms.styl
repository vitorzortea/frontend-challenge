#sing-in, #sing-up
  padding 0 10px
  display flex
  flex-direction column
  flex auto

  &>div:first-child
    flex auto
    border-bottom solid 1px rgba(0,0,0,0.2)

  &>div:last-child
    border-top solid 1px white
    padding 10px 0
    text-align center

    &>span
      display flex
      flex-wrap wrap
      justify-content center
      padding-top 10px

      a
        width 40px
        height 40px
        display flex
        align-items center
        justify-content center
        font-size  18px
        border-radius 10px
        margin 0 5px
        background red
        background-image linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,0.4) 5%,rgba(255,255,255,0) 50%), linear-gradient(to top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.2) 5%,rgba(0,0,0,0) 50%);
        color white

        &:nth-child(1)
          background-color #005AE5

        &:nth-child(2)
          background-color #5B7BBC

        &:nth-child(3)
          background-color #00ACED

        &:active
          background-image linear-gradient(to top, rgba(255,255,255,0) 0%,rgba(255,255,255,0.4) 5%,rgba(255,255,255,0) 50%), linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.2) 5%,rgba(0,0,0,0) 50%);


  form>div
    margin 0 0 20px

    .btn-default
      display table
      margin 0 auto 5px

    a
      display table
      margin 0 auto
      text-decoration underline
      cursor pointer
      font-size 12px

      &:hover
        color #24C7B4

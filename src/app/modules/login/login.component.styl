@import '../../../stylus/_variable'

#login
  display flex
  align-items center
  justify-content center
  padding 10px
  width 100%
  min-height 100vh
  overflow hidden
  background-image url('../../../assets/img/bg-login-shapes.png')
  background-repeat no-repeat
  background-position center
  background-size auto 80%

  main
    width 100%
    max-width 400px
    padding 40px 60px

    p
      color color-blue
      display table
      margin 0 auto
      font-size 22px
      padding 30px 0 60px
      line-height 1em

      strong
        display table
        text-transform uppercase
        line-height 1em

  button
    background-color color-facebook
    border solid 1px color-facebook
    color color-white
    display table
    width 100%
    margin 10px 0
    text-align left
    padding 5px 15px
    border-radius 10px
    font-size 16px
    cursor pointer

    i
      padding 5px 10px 5px 0
      font-size 20px

    &:last-child
      background-color color-white
      color color-facebook

    &:hover
      background-color color-blue
      border-color color-blue
      color color-white

  .loading
    position relative
    display table

    img
      animation loading 10s infinite cubic-bezier(0.26, 0.26, 0.64, 0.63)

    p
      position absolute
      top 50%
      left 50%
      transform translate(-50%, calc(-50% + 0.5em))
      line-height 1em
      font-weight bold


@keyframes loading
	from
		transform rotate(0deg)

	to
		transform rotate(360deg)


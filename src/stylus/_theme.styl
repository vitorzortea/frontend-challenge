// ==========================================
// Caixas Brancas
// ==========================================
.box-white
  border solid 1px color-gray2
  background-color color-white
  box-shadow 2px 2px 5px rgba(0,0,0,0.2)
  border-radius 10px

// ==========================================
// Input Ícones
// ==========================================
.input-icon
  position relative
  display flex
  padding 2px 10px
  margin 10px
  width calc(100% - 20px)
  font-size 14px
  border-bottom solid 1px color-gray-light-font

  input
    flex auto
    padding 2px 0px
    margin 0 2px
    width inherit

    &:focus

    &:nth-child(2)
      padding-left 20px

  i
    position absolute
    color color-gray-light-font
    font-size 20px
    left 5px
    top 50%
    transform translate(0, -50%)

  &:hover
    border-color color-yellow

    i
      color color-blue

// ==========================================
// Botão Padrão
// ==========================================
.btn-default
  background-color turquesa
  color white
  min-width 200px
  padding 5px 30px
  border-radius 8px
  cursor pointer

  &:hover
    background-color turquesa-dark


// ==========================================
// Régua
// ==========================================
.roler
  display table
  width 100%
  flex 100%
  height 0
  border-top solid 1px #D9DDDD
  border-bottom solid 1px #FFFFFF
  margin 10px 0
// ==========================================
// Menu para o map
// ==========================================
.main-map
  border solid 1px color-gray2
  background-color color-white
  box-shadow 2px 2px 5px rgba(0,0,0,0.2)
  border-radius 10px 0 10px 10px
  width 300px
  position absolute
  top 20px
  left 20px
  height calc(100vh - 150px)
  z-index 3


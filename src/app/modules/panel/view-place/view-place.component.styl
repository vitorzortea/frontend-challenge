@import '../../../../stylus/_variable'

.photo-place
  height 150px
  background-size cover
  background-position center

h1
  font-size 18px

h2
  font-size 12px

p
  font-size 15px

.info-place>div
  padding 10px 8px

.comentarios
  width 100%
  padding-top 20px

  h2
    display flex
    justify-content space-between
    align-items center

    button
      padding 8px 10px
      border solid 1px
      border-radius 5px
      font-size 16px
      line-height 1em
      color color-blue
      cursor pointer

      &:hover
        color color-white
        background-color color-blue

  h3
    font-size 13px
    padding-bottom 5px

    span
      font-weight normal
      display inline-table
      padding-left 10px
      color color-blue
      font-size 12px

  &>div
    padding 10px 0

    &:not(:last-child)
      border-bottom solid 1px color-gray2

.novo-comentario
  padding 10px

  h1
    padding-bottom 10px
    border-bottom solid 1px color-gray-light-font
    margin-bottom 10px

    span
      font-size 10px
      font-weight normal

  &>div
    padding 10px

  .btn-notas
    font-size 32px
    color color-blue
    position relative

    .base-nota
      display table

      &>i
        cursor pointer
        position relative
        z-index 2

        &:hover+.nota-select i
          opacity 1

      .nota-select
        position absolute
        top 0
        left 0

        i
          opacity 0

  textarea
    padding 10px
    width 100%
    max-width 100%
    min-width 100%
    min-height 8em
    font-size 16px
    border solid 1px color-blue
    border-radius 10px

  label>h2
    margin 0 0 -0.5em 10px
    background-color color-white
    padding 0 5px
    display table
    position relative
    z-index 2

  button
    display table
    width 100%
    text-transform uppercase
    font-weight bold
    font-size 16px
    color color-blue
    background color-yellow
    padding 10px
    border-radius 10px
    cursor pointer

.voltar-busca
  z-index 3

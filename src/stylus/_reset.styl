*
  box-sizing border-box
  margin 0
  padding 0
  border 0
  outline 0
  background transparent
  font-size 100%
  vertical-align baseline
  font-family 'Nunito', sans-serif

html, body
  min-height 100vh
  background-color color-gray1
  color color-gray-font
  font-size 12px

ol, ul
  list-style none

img
  max-width 100%
  height auto

a
  color inherit
  text-decoration none

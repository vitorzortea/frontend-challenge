@import '../../../../stylus/_variable'

.map-interface
  position relative

  .menu-map
    position absolute
    top 20px
    left 20px
    width 300px
    display flex
    z-index 3
    overflow hidden
    flex-wrap wrap

    .resultado-pesquisa
      width 100%
      flex 100%
      padding 5px
      border-top solid 1px color-gray2
      transition 0.5s

      &>div
        padding 10px 5px

        &:hover
          cursor pointer
          background-color color-gray1
          border-radius 10px

        &:not(:last-child)
          border-bottom solid 1px color-gray2

        &>div
          display inline-table

          &:first-child
            width 35px
            height 35px
            margin-right 10px
            border-radius 50%
            background-color color-gray2
            background-position center
            background-size cover
            vertical-align text-top


    .busca
      position relative
      flex auto
      font-size 16px

      i
        position absolute
        left 10px
        top 50%
        transform translate(0, -50%)

      input
        width 100%
        padding 10px 10px 10px 30px

    button
      padding 5px 10px
      font-size 20px

      &:hover
        cursor pointer
        background-color color-yellow
        color color-white
        border-left solid 1px color-gray2

  agm-map
    height calc(100vh - 100px)

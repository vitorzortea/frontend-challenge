// ==========================================
// Caixas Brancas
// ==========================================
.box-white
  border solid 1px color-gray2
  background-color color-white
  box-shadow 2px 2px 5px rgba(0,0,0,0.2)
  border-radius 10px

// ==========================================
// Botão Padrão
// ==========================================
.btn-default
  background-color turquesa
  color white
  min-width 200px
  padding 5px 30px
  border-radius 8px
  cursor pointer

  &:hover
    background-color turquesa-dark


// ==========================================
// Régua
// ==========================================
.roler
  display table
  width 100%
  flex 100%
  height 0
  border-top solid 1px #D9DDDD
  border-bottom solid 1px #FFFFFF
  margin 10px 0
// ==========================================
// Menu para o map
// ==========================================
.main-map
  border solid 1px color-gray2
  background-color color-white
  box-shadow 2px 2px 5px rgba(0,0,0,0.2)
  border-radius 10px 0 10px 10px
  width 300px
  position absolute
  top 10px
  left 10px
  max-height calc(100vh - 150px)
  z-index 4
  overflow-x hidden
  overflow-y auto


  &::-webkit-scrollbar
    width 8px

  &::-webkit-scrollbar-track
    background #f1f1f1

  &::-webkit-scrollbar-thumb
    background #909090
    border-radius 10px

  &::-webkit-scrollbar-thumb:hover
    background #999

.voltar-busca
    position absolute
    top 10px
    left 310px
    padding 5px 10px
    font-size 20px
    z-index 2
    border-radius 0 10px 10px 0

    &:hover
      cursor pointer
      background-color color-yellow
      color color-white

